{% extends 'main.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block navlist %}
    <li class="nav-item"><a class="nav-link" href="#jumbo">Jumbotron</a></li>
    <li class="nav-item"><a class="nav-link" href="#sform">Form</a></li>
{% endblock %}

{% block body %}
    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div id="jumbo" class="jumbotron">
                    <h1 class="display-1">
                        Welcome to my Test-Page!
                    </h1>
                    <p class="lead">I'm just figuring out, how different elements work in Bootstrap. This jumbotron here
                        is made to catch your attention =).</p>
                    <hr class="mr-2">
                    <h2 class="display-3">To Do-List</h2>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="list-1">
                                <label class="form-check-label" for="list-1">
                                    Build Footer
                                </label></div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="list-2">
                                <label class="form-check-label" for="list-2">
                                    Create a Jumbotron
                                </label></div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="list-3">
                                <label class="form-check-label" for="list-3">
                                    Build a simple form
                                </label></div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="list-4">
                                <label class="form-check-label" for="list-4">
                                    Add a sticky Navbar
                                </label></div>
                        </li>
                        <li class="list-group-item">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="list-5">
                                <label class="form-check-label" for="list-5">
                                    Implement Scrollspy
                                </label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="sform" class="container-fluid bg-dark">
        <div class="row justify-content-center">
            <div class="col-md-8 my-5 text-light">
                <form>
                    <h2> Contact</h2>
                    <div class="form-group">
                        <label for="name" data-toggle="tooltip"
                               data-placement="right" title="How should we call you?">Your Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <label for="mail" data-toggle="tooltip"
                               data-placement="right" title="How can we contact you?">Your E-Mail</label>
                        <input type="email" class="form-control" id="mail" placeholder="Your E-Mail">
                    </div>
                    <div class="form-group">
                        <label for="message">Your Message</label>
                        <textarea class="form-control" id="message" placeholder="Your Message"></textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/app.js') }}" type="text/javascript">
    </script>
    <script>$(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });</script>
    {% include 'icons.twig' %}
{% endblock %}

